<%= form_for resource, html: {class: "form-signin"}, as: resource_name, url: registration_path(resource_name) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Input email..."   %>
  </div>
  <div class="form-group">
    <%= f.label :FullName %><br />
    <%= f.text_field :name, class: "form-control", placeholder: "Input fullname..."   %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Input password..." %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Input password confirmation..." %>
  </div>
  <%= f.submit "Create my account", class: "btn btn-success" %>
<% end %>
<%= render "users/shared/links" %>
